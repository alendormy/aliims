div.col-md-3(ng-show="showExtra")
  h3 Extra
    button.btn(type="submit", ng-click="close('e')") Close
  button.btn(ng-click="add()")
    span.glyphicon.glyphicon-plus
div.col-md-3(ng-show="showGroup")
  h3 Group
    button.btn(type="submit", ng-click="close('g')") Close
  button.btn(ng-click="view(tag)")
    span.glyphicon.glyphicon-zoom-in
  button.btn(ng-click="save(tag)")
    span.glyphicon.glyphicon-pencil
  button.btn(ng-click="remove(tag)")
    span.glyphicon.glyphicon-trash
div.col-md-3(ng-show="showLoad")
  h3 Load
    button.btn(type='button', ng-click="close('l')") Close
  button.btn(ng-click="alert('download')")
    span.glyphicon.glyphicon-download
  button.btn(ng-click="alert('upload')")
    span.glyphicon.glyphicon-upload
div.col-md-3(ng-show="showDebug")
  h3 Debug
    button.btn(type='button', ng-click="close('d')") Close
  button.btn(type='button', ng-click="addOne()") AddOne
  button.btn(type='button', ng-click="removeLast()") RemoveLast
div.col-md-6(ng-show="showInput")
  h3 Input
    button.btn(type="submit", ng-click="close('i')") Close
  form.form-horizontal
    .control-group
      label.control-label(for="inputId") Id
      .controls
        input(type="text", id="inputId", placeholder="Id", ng-model="inputTag.id" disabled)
    .control-group
      label.control-label(for="inputUpDated") UpDated
      .controls
        input(type="text", id="inputUpDated", placeholder="UpDated", ng-model="inputTag.upDated")
    .control-group
      label.control-label(for="inputStatus") Status
      .controls
        input(type="text", id="inputStatus", placeholder="Status", ng-model="inputTag.status")
    .control-group
      label.control-label(for="inputType") Type
      .controls
        input(type="text", id="inputType", placeholder="Type", ng-model="inputTag.type")
    .control-group
      label.control-label(for="inputDesc") Desc
      .controls
        input(type="text", id="inputDesc", placeholder="Desc", ng-model="inputTag.desc")
    .control-group
      label.control-label(for="inputDatail") Datail
      .controls
        input(type="text", id="inputDatail", placeholder="Datail", ng-model="inputTag.datail")
    button.btn(type="submit", ng-click="save(inputTag)") Save
div.col-md-6(ng-show="showView")
  h3 View
    button.btn(type="submit", ng-click="close('v')") Close
  pre() {{viewTag | json}}
div.col-md-12(ng-show="showTable")
  h3 Table
  table.table.table-striped
    tr
      td ...
      td id
      td upDated
      td status
      td type
      td desc
      td datail
    tr(ng-repeat='tag in tags')
      td
        button.btn(ng-click="view(tag)" ng-disabled="disableView || disableAll")
          span.glyphicon.glyphicon-zoom-in
        button.btn(ng-click="edit(tag)" ng-disabled="disableEdit || disableAll")
          span.glyphicon.glyphicon-pencil
        button.btn(ng-click="delete(tag.id, tag)" ng-disabled="disableDelete || disableAll")
          span.glyphicon.glyphicon-trash
      td {{tag.id}}
      td {{tag.upDated}}
      td {{tag.status}}
      td {{tag.type}}
      td {{tag.desc}}
      td {{tag.datail}}
